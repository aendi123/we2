{{#with todoValues}}
<form action="/todo" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" required value="{{title}}">

    <label for="importance">Importance</label>
    <input type="number" name="importance" min="1" max="5" required value="{{importance}}">

    <label for="duedate">Due Date</label>
    <input type="date" id="duedate-input" name="duedate" required value="{{duedate}}">

    <input type="checkbox" name="finished" {{#if finished}}checked{{/if}}>
    <label for="finished">Finished</label>

    <label for="description">Description</label>
    <textarea id="description-input" name="description">{{description}}</textarea>

    <input type="text" name="id" hidden value="{{_id}}">
{{/with}}
    <input type="submit" name="action" value="{{createOrUpdate}}">
    <input type="submit" name="action" value="{{createOrUpdate}} & Overview">
</form>
<a href="/" class="overview-button"><button class="overview-button">Overview</button></a>